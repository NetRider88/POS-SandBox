{
  "name": "talabat-pos-integration-platform",
  "version": "1.0.0",
  "description": "Enterprise-grade testing environment for Talabat POS integrations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "npm install && npm run setup:db",
    "setup:db": "node -e \"require('./server.js')\"",
    "build": "echo 'No build step required for this project'",
    "docker:build": "docker build -t talabat-pos-platform .",
    "docker:run": "docker run -p 3000:3000 talabat-pos-platform"
  },
  "keywords": [
    "talabat",
    "pos",
    "integration",
    "testing",
    "restaurant",
    "api",
    "webhook",
    "orders",
    "catalog"
  ],
  "author": "John Mosaad <your-email@domain.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "axios": "^1.4.0",
    "sqlite3": "^5.1.6",
    "sqlite": "^4.2.1",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1",
    "cron": "^2.3.1",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "pdfkit": "^0.13.0",
    "nodemailer": "^6.9.3",
    "joi": "^17.9.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.43.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/node": "^20.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/talabat/pos-integration-platform.git"
  },
  "bugs": {
    "url": "https://github.com/talabat/pos-integration-platform/issues"
  },
  "homepage": "https://github.com/talabat/pos-integration-platform#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off"
    }
  }
}
