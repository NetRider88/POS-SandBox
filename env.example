# Talabat POS Integration Platform - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=sqlite:./data/talabat_pos.db

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Talabat API Configuration
TALABAT_API_KEY=your-talabat-api-key
TALABAT_STAGING_URL=https://staging-api.talabat.com/pos
TALABAT_PRODUCTION_URL=https://api.talabat.com/pos

# Email Service Configuration (for automated reports)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@talabat-pos-platform.com

# Monitoring Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/application.log
METRICS_ENABLED=true
METRICS_INTERVAL=60000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Report Generation Configuration
REPORT_STORAGE_PATH=./data/reports
REPORT_RETENTION_DAYS=30

# External Services Configuration
WEBHOOK_TIMEOUT=30000
API_TIMEOUT=60000
SSL_VERIFY=true

# Development Configuration
DEBUG_MODE=false
MOCK_TALABAT_API=true
ENABLE_CORS=true

# Production Configuration (uncomment for production)
# TRUST_PROXY=true
# SECURE_COOKIES=true
# HELMET_CSP_ENABLED=true
# SESSION_SECRET=your-session-secret

# Docker Configuration
# DOCKER_ENV=true
# CONTAINER_PORT=3000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# Performance Configuration
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=60000

# Feature Flags
ENABLE_REAL_TIME_MONITORING=true
ENABLE_SCHEDULED_REPORTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOK_TESTING=true
ENABLE_SSL_VALIDATION=true
